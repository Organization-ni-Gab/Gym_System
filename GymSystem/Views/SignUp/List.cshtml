@model IEnumerable<SignUp>
<h2>Sign up List</h2>
<h5>@ViewBag.message</h5>
<a class="btn btn-primary" asp-action="Create"> <i class="bi bi-plus-circle me-1"></i>Sign Up</a>
<table class="table table-bordered text-center">
	<thead class="thead-light">
		<tr>
			<th>ID</th>
			<th>Complete Name</th>
			<th>Contact</th>
			<th>Gender</th>
			<th>Plan Id</th>
			<th>Join Date</th>
			<th>Expiry Date</th>
			<th>Is Member</th>

			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var signUp in Model)
		{
			<tr>
				<td>@signUp.CustomerId</td>
				<td>@signUp.CompleteName()</td>
				<td>@signUp.ContactNumber</td>
				<td>@signUp.Gender</td>
				<td>@signUp.PlanId</td>
				<td>@signUp.JoinDate</td>
				<td>@signUp.ExpiryDate </td>
				<td>@signUp.isMember</td>


				<td class="text-center">
					<div class="d-flex justify-content-center align-items-center gap-2">
						<a asp-controller="SignUp" asp-action="Edit" asp-route-id="@signUp.CustomerId" class="btn btn-primary">
							Edit
						</a>
						<form asp-controller="SignUp" asp-action="Delete" asp-route-id="@signUp.CustomerId" method="post"
							onsubmit="return confirm ('Are you sure you want to delete?');">
							<button type="submit" class="btn btn-danger">Delete</button>	
						</form>
						
					</div>
				</td>
			</tr>

		}
		
	</tbody>
</table>